<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.prox"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="15" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/proxTheme">
        
            
        <activity
            android:name="com.example.prox.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
		<activity android:name=".SignUpActivity"
		    android:parentActivityName=".MainActivity"/>
		<activity android:name=".MenuActivity"/>
		<activity android:name=".ForgotPassword"
		    android:parentActivityName=".MainActivity"/>
		<activity android:name=".StoreActivity"/>
		<activity android:name=".Download"/>
		<activity android:name=".BookView"/>
		<activity android:name=".Utilities"/>
		<activity android:name=".Grid"/>
		<activity android:name=".BookReader"/>
		<activity android:name=".FreeBookView"/>
		<activity android:name=".LatestBookView"/>
		<activity android:name=".BestBookView"/>
		<activity android:name=".StoreBookDetails"/>
		<activity android:name=".InternetDetector"/>
		<activity android:name=".UserEbookList"
		    	android:parentActivityName=".MenuActivity"/>
		<activity android:name="com.example.prox.UserBookListView"
		    	android:parentActivityName=".UserEbookList"/>
		<activity android:name=".ProxReader"
				android:uiOptions="splitActionBarWhenNarrow"
		    	android:parentActivityName="com.example.prox.UserEbookList"/>
		<activity android:name=".SearchActivity"
		    	android:parentActivityName="com.example.prox.StoreFragment">
			<meta-data
                android:name="android.app.default_searchable"
                android:value=".BookSearch" />
		</activity>
		<activity android:name=".BookSearch"
		    	android:parentActivityName="com.example.prox.SearchActivity">
 			<intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
			<meta-data
                android:name="android.app.searchable"
                android:resource="@xml/bookstore_searchable" />
		</activity>
		
		
		
		<!-- NOTES sub app -->
		<activity android:name="com.example.prox.note.NoteList"
		    	android:parentActivityName=".MenuActivity"/>
        <activity android:name="com.example.prox.note.NoteEdit"
            	android:parentActivityName="com.example.prox.note.NoteList"
         		android:windowSoftInputMode="adjustUnspecified"/>
        <activity android:name="com.example.prox.note.SubjectList"
            	android:parentActivityName="com.example.prox.note.NoteList"/>
 
 
          
    </application>
	    <uses-permission android:name="android.permission.INTERNET"/>
	    <uses-permission android:name="android.permission.SEND_SMS"/>
	    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"></uses-permission>
	    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
	    <uses-permission android:name="android.permission.WRITE_OWNER_DATA"></uses-permission>
	    <uses-permission android:name="android.permission.READ_OWNER_DATA"></uses-permission>
</manifest>