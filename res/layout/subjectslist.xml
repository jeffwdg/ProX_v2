<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/notelist">
   
    <TextView
        android:id="@+id/subjects"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingBottom="20dp"
        android:text="Subjects"
        android:textSize="27sp" />
      
		<Button
        android:id="@+id/deletebtn"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="14dp"
        android:background="@drawable/ic_menu_delete" /> 
        
		
    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btmLayout"
        android:layout_below="@+id/subjects"
        android:background="#FFF9C8"
        android:divider="#D3D3D3"
        android:dividerHeight="1sp" 
        android:footerDividersEnabled="true" />

    <LinearLayout
        android:id="@+id/btmLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"        
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/addbuttonsubj"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="14dp"
            android:background="@drawable/add" />

    </LinearLayout>

    <TextView
        android:id="@+id/counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/subjects"
        android:layout_alignBottom="@+id/subjects"
        android:layout_marginRight="89dp"
        android:layout_toLeftOf="@+id/deletebtn"
        android:text="" />
    	
</RelativeLayout> 