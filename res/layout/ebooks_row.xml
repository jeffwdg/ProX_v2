<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingBottom="5dp"
    android:layout_height="match_parent">
 
    <ImageView
           android:id="@+id/mCover"
           android:layout_width="70dp"
           android:paddingLeft="10dp"
           android:paddingTop="15dp"
           android:paddingBottom="15dp"
           android:layout_marginLeft="5dp"
           android:layout_height="80dp"/>

		<TextView
		    android:id="@+id/mObjectId"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true"
		    android:visibility="invisible"
		    android:layout_marginRight="10sp"
		    android:textSize="15sp" />
		
		<TextView
		    android:id="@+id/mFilename"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignBottom="@+id/mObjectId"
		    android:layout_marginLeft="19dp"
		    android:layout_toRightOf="@+id/mCover"
		    android:text=""
		    
		    android:visibility="gone"
		    android:textSize="13dp" />

		<TextView
		    android:id="@+id/mAuthor"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignLeft="@+id/mTitle"
		    android:layout_below="@+id/mTitle"
		    android:textColor="#dddddd"
		    android:text="Author"
		    android:textSize="10sp" />

		<TextView
		    android:id="@+id/mTitle"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="33dp"
		    android:layout_marginTop="25dp"
		    android:textColor="#ffffff"
		    android:layout_toRightOf="@+id/mCover"
		    android:text="Title"
		    android:textSize="10dp" />
		
		<ProgressBar android:id="@+id/dlprogressbar"
			 android:layout_width="wrap_content" 
			 android:layout_height="wrap_content"
			 android:layout_gravity="center"
			 android:visibility="invisible"
			 android:layout_marginTop="25dp"
			 android:layout_marginLeft="33dp"
			 android:layout_toRightOf="@+id/mTitle"
			 style="@android:style/Widget.ProgressBar.Horizontal" />

</RelativeLayout>